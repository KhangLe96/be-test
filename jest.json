{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": "\\.spec.ts$",
    "testTimeout": 100000,
    "moduleNameMapper": {
        "^~(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "forceExit": true
}
